{"ast":null,"code":"import Header from './components/Header.vue';\nimport Tasks from './components/Tasks.vue';\nimport AddTask from './components/AddTask.vue';\nexport default {\n  name: 'App',\n  components: {\n    Header,\n    Tasks,\n    AddTask\n  },\n  data() {\n    return {\n      tasks: [],\n      showAddTask: false\n    };\n  },\n  methods: {\n    async deleteTask(id) {\n      if (confirm('Are you sure?')) {\n        const res = await fetch(`api/tasks/${id}`, {\n          method: 'DELETE'\n        });\n        res.status === 200 ? this.tasks = this.tasks.filter(task => task.id !== id) : alert('Error deleting task');\n      }\n    },\n    toggleReminder(id) {\n      this.tasks = this.tasks.map(task => task.id == id ? {\n        ...task,\n        reminder: !task.reminder\n      } : task);\n    },\n    async addTask(task) {\n      const res = await fetch('api/tasks', {\n        method: 'POST',\n        headers: {\n          'Content-type': 'application.json'\n        },\n        body: JSON.stringify(task)\n      });\n      const data = await res.json();\n      this.tasks = [...this.tasks, data];\n    },\n    toggleAddTask() {\n      this.showAddTask = !this.showAddTask;\n    },\n    async fetchTasks() {\n      const res = await fetch('api/tasks');\n      const data = await res.json();\n      return data;\n    },\n    async fetchTask(id) {\n      const res = await fetch(`api/tasks/${id}`);\n      const data = await res.json();\n      return data;\n    }\n  },\n  async created() {\n    this.tasks = await this.fetchTasks();\n  }\n};","map":{"version":3,"names":["Header","Tasks","AddTask","name","components","data","tasks","showAddTask","methods","deleteTask","id","confirm","res","fetch","method","status","filter","task","alert","toggleReminder","map","reminder","addTask","headers","body","JSON","stringify","json","toggleAddTask","fetchTasks","fetchTask","created"],"sources":["C:\\xampp\\htdocs\\vue_cli\\src\\App.vue"],"sourcesContent":["<template>\n  <div class=\"container\">\n    <Header @toggleAddTask=\"toggleAddTask\" title=\"Task Tracker\" :showAddTask=\"showAddTask\" > </Header>\n    <div v-if=\"showAddTask\">\n      <AddTask @add-task=\"addTask\"></AddTask>\n    </div>\n    <Tasks @toggleReminder=\"toggleReminder\" @deleteTask=\"deleteTask\"  :tasks=\"tasks\"></Tasks>\n  </div>\n</template>\n\n<script>\nimport Header from './components/Header.vue'\nimport Tasks from './components/Tasks.vue'\nimport AddTask from './components/AddTask.vue'\n\nexport default {\n  name: 'App',\n  components: {\n    Header,\n    Tasks,\n    AddTask\n  },\n  data() {\n    return {\n      tasks:[],\n      showAddTask:false,\n    }\n  },\n  methods:{\n    async deleteTask(id){\n      if(confirm('Are you sure?')){\n\n        const res = await fetch(`api/tasks/${id}`,{\n          method: 'DELETE'\n        })\n\n        res.status === 200 ? (this.tasks = this.tasks.filter((task)=> task.id !==id )) : alert('Error deleting task');\n      }\n    },\n    toggleReminder(id){\n      this.tasks = this.tasks.map((task) => task.id == id ? {...task, reminder: !task.reminder} : task);\n    },\n    async addTask(task){\n      const res = await fetch('api/tasks',{\n        method: 'POST',\n        headers: {\n          'Content-type': 'application.json',\n        },\n        body: JSON.stringify(task),\n      })\n\n      const data = await res.json();\n\n      this.tasks = [...this.tasks, data]\n    },\n    toggleAddTask(){\n      this.showAddTask = !this.showAddTask\n    },\n    async fetchTasks(){\n      const res = await fetch('api/tasks');\n\n      const data = await res.json();\n\n      return data;\n    }, \n    async fetchTask(id){\n      const res = await fetch(`api/tasks/${id}`);\n\n      const data = await res.json();\n\n      return data;\n    }\n  },\n  async created() {\n    this.tasks = await this.fetchTasks();\n  },\n}\n</script>\n\n<style>\n@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400&display=swap');\n\n* {\n  box-sizing: border-box;\n  margin: 0;\n  padding: 0;\n}\n\nbody {\n  font-family: 'Poppins', sans-serif;\n}\n\n.container {\n  max-width: 500px;\n  margin: 30px auto;\n  overflow: auto;\n  min-height: 300px;\n  border: 1px solid steelblue;\n  padding: 30px;\n  border-radius: 5px;\n}\n\n.btn {\n  display: inline-block;\n  background: #000;\n  color: #fff;\n  border: none;\n  padding: 10px 20px;\n  margin: 5px;\n  border-radius: 5px;\n  cursor: pointer;\n  text-decoration: none;\n  font-size: 15px;\n  font-family: inherit;\n}\n\n.btn:focus {\n  outline: none;\n}\n\n.btn:active {\n  transform: scale(0.98);\n}\n\n.btn-block {\n  display: block;\n  width: 100%;\n}\n</style>\n"],"mappings":"AAWA,OAAOA,MAAK,MAAO,yBAAwB;AAC3C,OAAOC,KAAI,MAAO,wBAAuB;AACzC,OAAOC,OAAM,MAAO,0BAAyB;AAE7C,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,UAAU,EAAE;IACVJ,MAAM;IACNC,KAAK;IACLC;EACF,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,KAAK,EAAC,EAAE;MACRC,WAAW,EAAC;IACd;EACF,CAAC;EACDC,OAAO,EAAC;IACN,MAAMC,UAAUA,CAACC,EAAE,EAAC;MAClB,IAAGC,OAAO,CAAC,eAAe,CAAC,EAAC;QAE1B,MAAMC,GAAE,GAAI,MAAMC,KAAK,CAAE,aAAYH,EAAG,EAAC,EAAC;UACxCI,MAAM,EAAE;QACV,CAAC;QAEDF,GAAG,CAACG,MAAK,KAAM,GAAE,GAAK,IAAI,CAACT,KAAI,GAAI,IAAI,CAACA,KAAK,CAACU,MAAM,CAAEC,IAAI,IAAIA,IAAI,CAACP,EAAC,KAAKA,EAAG,CAAC,GAAIQ,KAAK,CAAC,qBAAqB,CAAC;MAC/G;IACF,CAAC;IACDC,cAAcA,CAACT,EAAE,EAAC;MAChB,IAAI,CAACJ,KAAI,GAAI,IAAI,CAACA,KAAK,CAACc,GAAG,CAAEH,IAAI,IAAKA,IAAI,CAACP,EAAC,IAAKA,EAAC,GAAI;QAAC,GAAGO,IAAI;QAAEI,QAAQ,EAAE,CAACJ,IAAI,CAACI;MAAQ,IAAIJ,IAAI,CAAC;IACnG,CAAC;IACD,MAAMK,OAAOA,CAACL,IAAI,EAAC;MACjB,MAAML,GAAE,GAAI,MAAMC,KAAK,CAAC,WAAW,EAAC;QAClCC,MAAM,EAAE,MAAM;QACdS,OAAO,EAAE;UACP,cAAc,EAAE;QAClB,CAAC;QACDC,IAAI,EAAEC,IAAI,CAACC,SAAS,CAACT,IAAI;MAC3B,CAAC;MAED,MAAMZ,IAAG,GAAI,MAAMO,GAAG,CAACe,IAAI,CAAC,CAAC;MAE7B,IAAI,CAACrB,KAAI,GAAI,CAAC,GAAG,IAAI,CAACA,KAAK,EAAED,IAAI;IACnC,CAAC;IACDuB,aAAaA,CAAA,EAAE;MACb,IAAI,CAACrB,WAAU,GAAI,CAAC,IAAI,CAACA,WAAU;IACrC,CAAC;IACD,MAAMsB,UAAUA,CAAA,EAAE;MAChB,MAAMjB,GAAE,GAAI,MAAMC,KAAK,CAAC,WAAW,CAAC;MAE