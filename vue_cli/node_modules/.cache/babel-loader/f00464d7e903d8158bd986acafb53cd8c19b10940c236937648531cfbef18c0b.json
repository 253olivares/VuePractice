{"ast":null,"code":"import Header from './components/Header.vue';\nimport Tasks from './components/Tasks.vue';\nimport AddTask from './components/AddTask.vue';\nexport default {\n  name: 'App',\n  components: {\n    Header,\n    Tasks,\n    AddTask\n  },\n  data() {\n    return {\n      tasks: [],\n      showAddTask: false\n    };\n  },\n  methods: {\n    deleteTask(id) {\n      if (confirm('Are you sure?')) {\n        this.tasks = this.tasks.filter(task => task.id !== id);\n      }\n    },\n    toggleReminder(id) {\n      this.tasks = this.tasks.map(task => task.id == id ? {\n        ...task,\n        reminder: !task.reminder\n      } : task);\n    },\n    addTask(task) {\n      this.tasks = [...this.tasks, task];\n    },\n    toggleAddTask() {\n      this.showAddTask = !this.showAddTask;\n    },\n    async fetchTasks() {\n      const res = await fetch('http://localhost:5000/tasks');\n      const data = await res.json();\n      return data;\n    }\n  },\n  created() {\n    this.tasks = [{\n      id: 1,\n      text: 'Doctors Appointment',\n      day: 'March 1st at 2:30pm',\n      reminder: true\n    }, {\n      id: 2,\n      text: 'Meeting at School',\n      day: 'March 3rd at 1:30pm',\n      reminder: true\n    }, {\n      id: 3,\n      text: 'Food Shopping',\n      day: 'March 3rd at 11:00am',\n      reminder: false\n    }];\n  }\n};","map":{"version":3,"names":["Header","Tasks","AddTask","name","components","data","tasks","showAddTask","methods","deleteTask","id","confirm","filter","task","toggleReminder","map","reminder","addTask","toggleAddTask","fetchTasks","res","fetch","json","created","text","day"],"sources":["C:\\xampp\\htdocs\\vue_cli\\src\\App.vue"],"sourcesContent":["<template>\n  <div class=\"container\">\n    <Header @toggleAddTask=\"toggleAddTask\" title=\"Task Tracker\" :showAddTask=\"showAddTask\" > </Header>\n    <div v-if=\"showAddTask\">\n      <AddTask @add-task=\"addTask\"></AddTask>\n    </div>\n    <Tasks @toggleReminder=\"toggleReminder\" @